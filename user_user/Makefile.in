BUILDTOP=@BUILDTOP@
srcdir = @srcdir@
VPATH = @srcdir@
 
DEFS = @DEFS@
CC = @CC@
CCOPTS = @CCOPTS@
LIBS = @LIBS@
KRB5ROOT = @KRB5ROOT@
 
CFLAGS = $(CCOPTS) $(DEFS) -DDEBUG
LDFLAGS = -g

KRB5MANROOT = $(KRB5ROOT)/man
ADMIN_BINDIR = $(KRB5ROOT)/admin
SERVER_BINDIR = $(KRB5ROOT)/sbin
CLIENT_BINDIR = $(KRB5ROOT)/bin
ADMIN_MANDIR = $(KRB5MANROOT)/man8
SERVER_MANDIR = $(KRB5MANROOT)/man8
CLIENT_MANDIR = $(KRB5MANROOT)/man1
FILE_MANDIR = $(KRB5MANROOT)/man5
KRB5_LIBDIR = $(KRB5ROOT)/lib
KRB5_INCDIR = $(KRB5ROOT)/include
KRB5_INCSUBDIRS = \
	$(KRB5_INCDIR)/krb5 \
	$(KRB5_INCDIR)/asn.1 \
	$(KRB5_INCDIR)/kerberosIV

SRCTOP = $(srcdir)/$(BUILDTOP)
TOPLIBD = $(BUILDTOP)/lib
ISODELIB=@ISODELIB@
COMERRLIB=$(BUILDTOP)/util/et/libcom_err.a
DBMLIB=

all::

KLIB = $(TOPLIBD)/libkrb5.a $(TOPLIBD)/libcrypto.a $(ISODELIB) $(COMERRLIB) $(DBMLIB)

uuclient: client.o
	$(CC) $(CFLAGS) -o uuclient client.o $(KLIB) $(LIBS)

client.o:	$(srcdir)/client.c

all:: uuclient


clean::
	$(RM) client.o uuclient

uuserver: server.o
	$(CC) $(CFLAGS) -o uuserver server.o $(KLIB) $(LIBS)

server.o:	$(srcdir)/server.c

all:: uuserver

install::
	cp uuclient $(DESTDIR)$(CLIENT_BINDIR)/uuclient
	cp uuserver $(DESTDIR)$(SERVER_BINDIR)/uusrever

clean::
	$(RM) server.o uuserver

